  - @ranks.each do |rank|
    %tr
      %td= rank.name
      %td= rank.boy
      %td= rank.is_current
      %td= rank.service
      %td= rank.heritage
      %td= rank.hobbies
      %td= rank.life_skills
      %td= rank.outdoor_activities
      %td= rank.pioneer_skills
      %td= rank.sci_tech
      %td= rank.values
      %td= rank.start
      %td= rank.finish
      %td= rank.awarded
      %td= link_to 'Show', rank
      %td= link_to 'Edit', edit_rank_path(rank)
