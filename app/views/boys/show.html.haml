%p#notice= notice

= title( @boy.name)
= subtitle(@boy.current_rank.to_s)

%p
  %b Patrol:
  = @boy.patrol

%h2 Progress
%table.table.table-bordered
  %tr
    %th <abbr title='Service Hours'>S</abbr>
    %th <abbr title='Heritage'>H</abbr>
    %th <abbr title='Hobbies'>B</abbr>
    %th <abbr title='Life Skills'>L</abbr>
    %th <abbr title='Outdoor Activities'>O</abbr>
    %th <abbr title='Pioneering Skills'>P</abbr>
    %th <abbr title='Science & Technology'>T</abbr>
    %th <abbr title='Values'>V</abbr>
  %tr
    %td= @boy.current_rank.service || 0
    %td= @boy.current_rank.heritage || 0
    %td= @boy.current_rank.hobbies || 0
    %td= @boy.current_rank.life_skills || 0
    %td= @boy.current_rank.outdoor_activities || 0
    %td= @boy.current_rank.pioneer_skills || 0
    %td= @boy.current_rank.sci_tech || 0
    %td= @boy.current_rank.values || 0

%table.table
  %tr
    %th Category
    %th{:colspan=>2} &nbsp;
  %tr
    %td (S) Service Hours
    %td= @boy.current_rank.service || 0
    %td &nbsp;
  %tr
    %td (H) Heritage Branch
    %td= @boy.current_rank.heritage || 0
    %td= show_leaves(@boy.current_rank.heritage)
  %tr
    %td (B) Hobbies Branch
    %td= @boy.current_rank.hobbies || 0
    %td= show_leaves(@boy.current_rank.hobbies)
  %tr
    %td (L) Life Skills Branch
    %td= @boy.current_rank.life_skills || 0
    %td= show_leaves(@boy.current_rank.life_skills)
  %tr
    %td (O) Outdoor Activities Branch
    %td= @boy.current_rank.outdoor_activities || 0
    %td= show_leaves(@boy.current_rank.outdoor_activities)
  %tr
    %td (P) Pioneer Skills Branch
    %td= @boy.current_rank.pioneer_skills || 0
    %td= show_leaves(@boy.current_rank.pioneer_skills)
  %tr
    %td (T) Sci Tech Branch
    %td= @boy.current_rank.sci_tech || 0
    %td= show_leaves(@boy.current_rank.sci_tech)
  %tr
    %td (V) Values Branch
    %td= @boy.current_rank.values || 0
    %td= show_leaves(@boy.current_rank.values)

%h2 Attendance

%table.table.table-bordered
  %tr
    %th Event
    %th <abbr title='Service Hours'>S</abbr>
    %th <abbr title='Heritage'>H</abbr>
    %th <abbr title='Hobbies'>B</abbr>
    %th <abbr title='Life Skills'>L</abbr>
    %th <abbr title='Outdoor Activities'>O</abbr>
    %th <abbr title='Pioneering Skills'>P</abbr>
    %th <abbr title='Science & Technology'>T</abbr>
    %th <abbr title='Values'>V</abbr>

  = render :partial => @boy.events

= link_to 'Edit', edit_boy_path(@boy)
\|
= link_to 'Back', boys_path
