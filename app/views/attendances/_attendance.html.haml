%div{:class => "row candidate #{(get_row() % 2 == 0) ? 'even' : 'odd'}"}
  %div.col-xs-1= count_attendee()
  %div.col-xs-6= link_to attendance.name, attendance.boy.becomes(Boy)
  %div.col-xs-2= attendance.rank.name.titleize
  %div.col-xs-1 &nbsp;
  %div.col-xs-2= link_to 'Remove', del_event_attendance_path(@event, attendance), class: "btn btn-danger", :remote => true if can? :edit, @event