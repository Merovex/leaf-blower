= render :partial => "events/header"

.row
  .col-sm-8= link_to 'Edit Event', edit_event_path(@event), :class => "btn btn-primary" if can? :edit, @event
  .col-sm-4.text-right= link_to 'Delete Event',  { action: "destroy", id: @event.id }, method: :delete, :class => "btn btn-danger", data: { confirm: "Are you sure?" } if can? :destroy, @event

%h2 Roster

%h3 Present

%div#present
  = render :partial => 'attendances/attendance', :collection => @attendees

- if can? :edit, @event      
  %h3 Absent

  %div#absent
    =render :partial => "events/candidates"

/ = link_to 'Destroy', @event,  :method => :delete

