= title('Packs')

%table.table.table-bordered
  %tr
    %th Name
    %th Location
    %th

  - @packs.each do |pack|
    %tr
      %td= link_to pack.name, pack
      %td= pack.location.address
      %td= link_to 'Destroy', pack, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

