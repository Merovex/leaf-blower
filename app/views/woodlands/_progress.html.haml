- r = @boy.rank

%table.table.table-bordered
  %thead
    %tr
      %th{:width => "10%"} Color
      %th{:width => "22%"} Branch
      %th{:width => "8%"} Leaves
      %th{:width => "15%"} Accrued On
      %th{:width => "15%"} Recorded On
      %th{:width => "20%"} Recorded By
  %tbody
    %tr
      %td.xbg-brown 
      %td Forest Award
      %td= subdue_zero(r,'forest',7)
      %td= show_date(@boy.rank.forest_on)
      %td= show_tt_status(@boy,"forest")
      %td= show_tt_by(@boy.rank.forest_tt_by)
    %tr
      %td.bg-brown Brown
      %td (H) Heritage
      %td= subdue_zero(r,'heritage')
      %td= show_date(@boy.rank.heritage_on)
      %td= show_tt_status(@boy,"heritage")
      %td= show_tt_by(@boy.rank.heritage_tt_by)
    %tr
      %td.bg-burgundy Burgundy
      %td (L) Life Skills
      %td= subdue_zero(r,'life_skills')
      %td= show_date(@boy.rank.life_on)
      %td= show_tt_status(@boy,"life")
      %td= show_tt_by(@boy.rank.life_tt_by)
    %tr
      %td.bg-yellow Yellow
      %td (T) Sci Tech
      %td= subdue_zero(r,'sci_tech')
      %td= show_date(@boy.rank.science_on)
      %td= show_tt_status(@boy,"science")
      %td= show_tt_by(@boy.rank.science_tt_by)
    %tr
      %td.bg-black Black
      %td (B) Hobbies
      %td= subdue_zero(r,'hobbies')
      %td= show_date(@boy.rank.hobbies_on)
      %td= show_tt_status(@boy,"hobbies")
      %td= show_tt_by(@boy.rank.hobbies_tt_by)
    %tr
      %td.bg-red Red
      %td (V) Values
      %td= subdue_zero(r,'values')
      %td= show_date(@boy.rank.values_on)
      %td= show_tt_status(@boy,"values")
      %td= show_tt_by(@boy.rank.values_tt_by)
    %tr
      %td.bg-green Green
      %td (O) Outdoor Activities
      %td= subdue_zero(r,'outdoor_activities')
      %td= show_date(@boy.rank.outdoor_on)
      %td= show_tt_status(@boy,"outdoor")
      %td= show_tt_by(@boy.rank.outdoor_tt_by)
    %tr
      %td.bg-blue Blue
      %td (P) Pioneer Skills
      %td= subdue_zero(r,'pioneer_skills')
      %td= show_date(@boy.rank.pioneer_on)
      %td= show_tt_status(@boy,"pioneer")
      %td= show_tt_by(@boy.rank.pioneer_tt_by)
    %tr
      %td &nbsp;
      %td (S) Service Hours
      %td= r.service || 0
      %td &nbsp;
      %td &nbsp;
      %td &nbsp;

%h4 Progress Table Key

%ul
  %li
    %strong Color:
    Color is the branch color found on the branch patch.
  %li
    %strong Leaves:
    %ul
      %li= "Total leaves accrued (#{Rank::TARGET} leaves to Branch)"
      %li= "Branch + additional leaves accruing to Star (#{Rank::STAR_TARGET} leaves)"
      %li Silvan Star
  %li
    %strong Accrued On:
    When Leaf Tracker identified the branch was earned by accumulation of leaves
  %li
    %strong Recorded On:
    When branch award was Recorded in Troop Track.
  %li
    %strong Recorded By:
    Who reported the recording