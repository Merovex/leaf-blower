- r = woodland.current_rank
%tr
  %td.col-xs-4
    - if can? :read, Bonum
      = link_to woodland.name, boy_path(woodland.slug)
    -else 
      = keep(woodland.name)

    = " (#{woodland.current_rank.grace})"
  %td.col-xs-1.right
    = woodland.current_rank.service
    %small.text-muted hrs
  %td.col-xs-1.right= "#{subdue_zero(woodland.current_rank.heritage)}#{show_award_bang(r,'heritage')}".html_safe
  %td.col-xs-1.right= "#{subdue_zero(woodland.current_rank.hobbies)}#{show_award_bang(r,'hobbies')}".html_safe
  %td.col-xs-1.right= "#{subdue_zero(woodland.current_rank.life_skills)}#{show_award_bang(r,'life')}".html_safe
  %td.col-xs-1.right= "#{subdue_zero(woodland.current_rank.outdoor_activities)}#{show_award_bang(r,'outdoor')}".html_safe
  %td.col-xs-1.right= "#{subdue_zero(woodland.current_rank.pioneer_skills)}#{show_award_bang(r,'pioneer')}".html_safe
  %td.col-xs-1.right= "#{subdue_zero(woodland.current_rank.sci_tech)}#{show_award_bang(r,'science')}".html_safe
  %td.col-xs-1.right= "#{subdue_zero(woodland.current_rank.values)}#{show_award_bang(r,'values')}".html_safe